<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkScreen"
    tools:context=".HomeScreen.Connection.Connection">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="Conexão por código"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/connectEditText"
        app:layout_constraintStart_toStartOf="@+id/connectEditText" />

    <Button
        android:id="@+id/goBack2"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/search_button"
        android:drawableTop="@drawable/ic_leftarrow"
        android:drawableTint="@color/white"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Connection"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:layout_marginBottom="132dp"
        android:layout_weight="1"
        android:background="@drawable/round_gray_button"
        android:drawableLeft="@drawable/qr_code_scan_svgrepo_com"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/inter_semibold"
        android:paddingLeft="10dp"
        android:text="Conectar com QRCode"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qrconnection_btn3"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/inter_bold"
        android:text="Conectar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_bias="0.481" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="160dp"
        android:layout_height="19dp"
        android:fontFamily="@font/inter_regular"
        android:text="Connexão por QrCode"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#C1C1C1"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button" />

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="159dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/black_button"
        android:fontFamily="@font/inter_bold"
        android:text="Confirmar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/connectEditText"
        app:layout_constraintTop_toBottomOf="@+id/connectEditText" />

    <EditText
        android:id="@+id/connectEditText"
        style="@style/edit_text"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/blue_textbox"
        android:drawableRight="@drawable/ic_search"
        android:drawableTint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:hint="codigo da entidade"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scan_svgrepo" />
</androidx.constraintlayout.widget.ConstraintLayout>